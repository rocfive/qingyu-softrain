/* pages/business/noticed.wxss */
.head{
  height: 168rpx;
  border-bottom: 1px solid #f2f2f2;
  padding-top:20rpx;
  padding-bottom: 20rpx; 
}
.head .title{
  width: 100%;
  height: 92rpx;
  font-size: 32rpx;
  margin-top: 10rpx;
}
.head .time{
  color: #999999
}
.content{
  padding-top:48rpx;
  padding-bottom: 30rpx;
}
.tab{
  height: 100rpx;
  line-height: 100rpx;
  font-size: 30rpx;  
  border-bottom: 2rpx solid #f2f2f2
}
.tab view{
  padding: 0 10rpx;
  box-sizing: border-box
}
.tab .active{
  color: #4694ff;
  border-bottom: 4rpx solid #4694ff
}
.scrollbox {
  height: 250rpx;
  padding-top: 60rpx;
  padding-bottom: 40rpx;
  box-sizing: border-box;
  white-space: nowrap;
}
.scrollbox .item {
  display: inline-block;
  min-width: 100rpx;
  text-align: center;
  margin-right: 40rpx;
  font-size: 24rpx;  
}
.scrollbox .item image{
  width: 74rpx;
  height: 74rpx;
  border-radius: 50%
}
.scrollbox .item text{
  display: block;
  /* width: 100rpx; */
  text-align: center;
  margin-top: 12rpx;
}