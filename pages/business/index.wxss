/* pages/business/index.wxss */
page{
  padding-bottom: 56rpx;
}
.headbg{
  width: 100vw;
  height: 300rpx;
}
.headbg image{
  width: 100vw;
  height: 234rpx;
}
.head{
  width: 690rpx;
  height: 224rpx;
  background: #fff;
  box-shadow: 0 0 20rpx rgba(65,156,252,0.3);
  border-radius: 12rpx;
  position: relative;
  margin: auto;
  margin-top: -240rpx;
  padding: 0 32rpx;
  box-sizing: border-box
}
.head .headpic{
  width: 136rpx;
  height: 136rpx;
  border-radius: 50%;
  position: absolute;
  top: -30rpx;
}
.head .headpic image{
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}
.head .storename{
  width: 460rpx;
  position: absolute;
  right: 28rpx;
  height: 112rpx;
  line-height: 128rpx;
  font-size: 34rpx;
  color: #292b32
}
.head .situation{
  width: 560rpx;
  position: absolute;
  bottom: 20rpx;
  left: 80rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #292b32;
}
.head .situation .icon-shuju1{
  color: #419cfc;
  font-size: 36rpx;
  margin-right: 10rpx;
}
.head .situation .icon-dengji{
  color: #f8724c;
  font-size: 36rpx;
  margin-right: 10rpx;
}
.head .situation .txbtn{
  width: 83rpx;
  height: 38rpx;
  background: #f8724c;
  color: #fff;
  border-radius: 10rpx;
  text-align: center;
  line-height: 38rpx;
  margin-left: 16rpx;
  font-size: 24rpx;
}
.bt{
  height: 94rpx;
  line-height: 94rpx;
  border-bottom: 1rpx solid #eee;
  font-size: 30rpx;
}
.bt .bt_r{
  font-size: 26rpx;
  color: #666666;
}
.bt .bt_r .iconfont{
  font-size: 28rpx;
}
.menu {
  height: 200rpx; 
}
.menu .iconfont{
  width: 60rpx;
  height: 60rpx;
  background:linear-gradient(90deg,#3e9aff, #9d95fb);
  color: #fff;
  border-radius: 30rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 36rpx;
  margin-bottom: 12rpx;
}
.menu .flex_c_c{
  width: 120rpx;
  height: 160rpx;
  font-size: 24rpx;
}
.menu navigator{
  position: relative
}
.menu1{
  overflow: hidden;
  clear: both;
  padding: 35rpx 0;
}
.menu1 navigator,.menu1 view{
  width: 234rpx;
  height: 142rpx;
  float: left;
  font-size: 26rpx;
  color: #666666
}
.menu1 navigator .iconfont, .menu1 view .iconfont{
  color: #3f9aff;
  font-size: 52rpx;
  margin-bottom: 8rpx;
}
.btn{
  width: 712rpx;
  height: 88rpx;
  background: linear-gradient(90deg,#3e9aff,#9d95fb);
  margin:56rpx auto 0;
  border-radius: 44rpx;
  text-align: center;
  line-height: 88rpx;
  color: #fff;
  font-size: 32rpx;
}
