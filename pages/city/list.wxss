/* pages/city/list.wxss */
.scrool_left{
  height: calc(100vh - 112rpx); 
  width: 100%;
}
.searchbox{
  width: 100vw;
  height: 112rpx;
  border-bottom: 1px solid #f2f2f2
}
.searchbox .search{
  width: 688rpx;
  height: 64rpx;
  background: #f7f7f7;
  border-radius: 32rpx;
  padding: 0 40rpx;
  position: relative
}
.searchbox .search .icon-sousuo{
  color: #888888;
}
.searchbox .search input{
  width: 560rpx;
  margin-left: 16rpx;
}
.searchbox .search .icon-cuo{
  position: absolute;
  right: 20rpx;
  color: #666;
  z-index: 999
}
.thiscity{
  width: 100vw;
  height: 106rpx;
  display: flex;
  align-items: center;
  padding: 0 3.2%;
  box-sizing: border-box; 
  font-size: 32rpx
}
.hot .hotlist{
  margin-bottom: 40rpx;
  width: 93%;
}
.hot .hotlist view{
  width: 146rpx;
  height: 64rpx;
  display: inline-block;
  margin-right: 20rpx;
  background: #f8f8f8;
  text-align: center;
  line-height: 64rpx;
  margin-bottom: 20rpx
}
.hot .hotlist view:nth-child(4n){
  margin-right: 0
}
.hot .hotlist .cur{
  border: 1px solid #4694ff;
  background: #cfe3ff;
  color: #4694ff;
  box-sizing: border-box
}
.group .tit, .hot .tit{
  font-size: 30rpx; 
  color: #979797; 
  line-height:80rpx; 
  height:80rpx; 
  padding: 0 28rpx;
  box-sizing: border-box; 
}
.group .item{ 
  color: #333; 
  width: 90%; 
  height: 72rpx; 
  border-bottom: 1rpx solid #f3f3f3; 
  line-height:72rpx;
  box-sizing: border-box; 
}
.right{ 
  width: 10%; 
  font-size: 28rpx; 
  color: #18303d; 
  position: absolute; 
  right: 0; 
  top: 20vh;
}
.right view{ 
  width:80%; 
  margin: auto; 
  text-align: center; 
  line-height: 40rpx;
}
.searchList{
  width: 100vw;
  height: calc(100vh - 108rpx);
  position: absolute;
  top: 108rpx;
  left: 0;
}
.searchList .item{
  color: #333; 
  width: 100%; 
  height: 72rpx; 
  border-bottom: 1rpx solid #f3f3f3; 
  line-height:72rpx;
  box-sizing: border-box; 
}