<!--pages/logs/getTel.wxml-->
<form bindsubmit="submit">
  <view class="formbox flex_c_c">
    <view class="logo"><image src="../img/goodspic.png" mode="aspectFill"></image></view>
    <view class="item">
      <input placeholder="请输入真实姓名" type="text" name='name'></input>
    </view>
    <view class="item">
      <input placeholder="请输入手机号" type="number" name='phone' value="{{phone}}" bindinput="bindphone"></input>
    </view>
    <view class="item flex_r_b">
      <input placeholder="请输入手机验证码" class="codeinput" name='password'></input>
      <view class="codebtn" bindtap="bindcode">获取验证码</view>
    </view>
    <button class="btn" form-type="submit">确定</button>
  </view>
</form>
