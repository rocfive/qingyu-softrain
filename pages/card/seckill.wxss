/* pages/card/seckill.wxss */
page{
  background: #fff
}
.banner, .banner image{
  width: 100vw;
  height: 374rpx;
}
.hidescrollbar{
  height: 138rpx;
  overflow: hidden
}
.seckill_time{
  white-space: nowrap;
}
.seckill_time .item{
  padding-top: 28rpx;
  padding-bottom: 26rpx;
  display: inline-block;
  margin-right: 106rpx;
  font-size: 24rpx;
  text-align: center;
  margin-bottom: 20rpx;
}
.seckill_time .item.cur{
  color: #418dfd
}
.seckill_time .item.finish{
  color: #999
}
.seckill_time .item .time{
  font-size: 34rpx;
}
.seckillbt{
  position: relative;
  text-align: center
}
.seckillbt image{
  width: 286rpx;
  position: relative
}
.seckillbt::before{
  width: 23rpx;
  height: 23rpx;
  background: #9096fc;
  position: absolute;
  left: 188rpx;
  content: " ";
  border-radius: 50%;
}
.seckillbt::after{
  width: 22rpx;
  height: 22rpx;
  background: #9096fc;
  position: absolute;
  left: 560rpx;
  content: " ";
  border-radius: 50%;
  bottom: 8rpx;
}
.seckillbt .after{
  width: 25rpx;
  height: 25rpx;
  background: #29ecd2;
  position: absolute;
  border-radius: 50%;
  left: 527rpx;
  top: 15rpx;
}
.list{
  margin-top: 55rpx;
}
.list .item{
  width: 710rpx;
  height: 308rpx;
  margin: auto;
  border-radius: 10rpx;
  box-shadow: 0 0 8rpx rgba(0,0,0,0.07);
  padding: 0 28rpx 0 20rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}
.list .item .pic{
  width: 320rpx;
  height: 254rpx;
}
.list .item .item_r{
  width: 320rpx;
  height: 254rpx;
}
.list .item .item_r .title{
  text-align: justify;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.list .item .item_r .money{
  margin-bottom: 12rpx;
  margin-top: 12rpx;
}
.list .item .item_r .seckillprice{
  color: #418dfd;
  font-size: 32rpx;
  font-weight: bold;
  display: inline-block
}
.list .item .item_r .seckillprice text{
  font-size: 56rpx;
}
.list .item .item_r .original{
  font-size: 20rpx;
  color: #666666;
  text-decoration: line-through;
  margin-left: 18rpx;
  display: inline-block;
}
.list .item .item_r .supply{
  font-size: 24rpx;
  color: #666666;
}
.list .item .item_r .supply text{
  color: #4099ff
}
.list .item .item_r .buy{
  width: 174rpx;
  height: 50rpx;
  text-align: center;
  background: linear-gradient(45deg, #3e9aff, #9c95fb);
  border-radius: 25rpx;
  color: #fff;
  line-height: 50rpx;
  font-size: 30rpx;
}
.list .item .item_r .buy.gray{
  background: #ccc;
}
