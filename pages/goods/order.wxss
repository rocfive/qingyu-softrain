/* pages/goods/order.wxss */
page{
  padding-bottom: 160rpx;
}
.goodsmsg{
  height: 235rpx;
  position: relative
}
.goodsmsg image{
  width: 178rpx;
  height: 178rpx;
  border-radius: 10rpx;
}
.goodsmsg .msg_r{
  width: 490rpx;
  height: 178rpx;
  line-height: 48rpx;
  padding-top: 10rpx;
  box-sizing: border-box
}
.goodsmsg .msg_r .h1{
  height: 96rpx;
  width: 400rpx;
  text-align: justify;
}
.goodsmsg .spec{
  margin-top: 20rpx
}
.goodsmsg .selected{
  color: #666666;
  font-size: 24rpx;
}
.goodsmsg .price{
  font-size: 26rpx;
  color: #4694ff;
  font-weight: bold
}
.goodsmsg .price text{
  font-size: 34rpx;
}

.group .item {
  height: 108rpx;
  border-bottom: 1rpx solid #f2f2f2
}
.group .item:last-child{
  border-bottom: none
}
.group .item label{
  font-size: 30rpx;
  color: #666666
}
.group .item01,.group .item01 label{
  color: #f8724c
}
.group .item01 label .iconfont{
  color: #f8724c;
  font-size: 42rpx;
  margin-right: 20rpx;
}
.group .item01 .icon-gengduo, .group .item02 .icon-gengduo{
  color: #858585;
  font-size: 28rpx;
}
.group .item02,.group .item02 label{
  color: #4c9dfa
}
.group .item02 label .iconfont{
  font-size: 42rpx;
  margin-right: 20rpx;
  background-image: linear-gradient(90deg,#3d9aff,#8d96fc);
  -webkit-background-clip:text;
  color: transparent;
}
.group .item.gray{
  color: #999;
}
.group .item.gray label .iconfont{
  color: #ccc;
}
.group .item.gray label {
  color: #999;  
}  
.group1{
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.group .item03{
  height: 60rpx;
  line-height: 60rpx;
  color: #666666
}
.group .item03 .money{
  color: #4694ff
}
.bottom{
  width: 100vw;
  height: 120rpx;
  position: fixed;
  bottom: 0;
  font-size: 36rpx;
}
.bottom .money{
  color: #4694ff;
  font-size: 38rpx;
}
.bottom .btn{
  width: 312rpx;
  height: 90rpx;
  border-radius: 45rpx;
  text-align: center;
  line-height: 90rpx;
  color: #fff;
  font-size: 32rpx;
  background: linear-gradient(90deg,#3c9aff,#9e95fb);
}