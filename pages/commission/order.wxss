/* pages/commission/order.wxss */
@import "bottom";
page{
  background: #f2f2f2;
    padding-bottom: 120rpx
}
.top{
  width: 100vw;
  height: 82rpx;
  /* background:linear-gradient(180deg,#418dfd,#9197fb); */
  background: #418dfd;
  padding: 0 15rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  color: #fff;
}
.tab{
  width: 100vw;
  height: 98rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #e4e4e4
}
.tab .item{
  height: 98rpx;
  line-height: 98rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #444
}
.tab .item.cur{
  color: #468efd;
  border-bottom: 3rpx solid #468efd;
}
.list .item{
  width: 100vw;
  height: 250rpx;
  margin-top: 10rpx;
  background: #fff;
  
}
.list .item .item_t{
  width: 100vw;
  height: 174rpx;
  padding: 0 15rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #e4e4e4;
  display: flex;
  flex-flow: column;
  justify-content: center;
  font-size: 24rpx;
  color: #888888;
  line-height: 42rpx
}
.list .item .item_b{
  width: 100vw;
  height: 76rpx;
  padding: 0 15rpx;
  box-sizing: border-box;
  text-align: right;
  line-height: 76rpx;
  font-size: 28rpx;
  color: #444444
}
