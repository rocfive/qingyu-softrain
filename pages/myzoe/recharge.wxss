/* pages/myzoe/recharge.wxss */
page{
  background: #fff;
}
.head{
  width: 690rpx;
  height: 310rpx;
  border-radius: 15rpx;
  position: relative;
  margin:24rpx auto 0
}
.head .bg{
  width: 690rpx;
  height: 310rpx;
  position: absolute;
  left: 0;
  top: 0;
}
.head .title{
  position: absolute;
  left: 30rpx;
  top: 48rpx;
  color: #fff;
  font-size: 30rpx;
}
.head .money{
  position: absolute;
  left: 30rpx;
  top: 100rpx;
  font-weight: bold;
  font-size: 34rpx;
  color: #fff
}
.head .money text{
  font-size: 86rpx;
}
.rechargebt{
  height: 123rpx;
  width: 100vw;
  font-size: 30rpx;
  color: #bdbdbd
}
.rechargebt::before, .rechargebt::after{
  content: "";
  display: block;
  width: 180rpx;
  height: 1px;
  background: #eaeaea;
}
.rechargebt::before{
  margin-right: 20rpx;
}
.rechargebt::after{
  margin-left: 20rpx
}
.choselist{
  flex-wrap: wrap
}
.choselist .item{
  width: 324rpx;
  height: 132rpx;
  border-radius: 10rpx;
  box-shadow: 0 0 20rpx rgba(0,0,0,0.04);
  margin-bottom: 24rpx;
  position: relative
}
.choselist .item.active{
  border: 2rpx solid #c3dcff;
  border-radius: 10rpx;
}
.choselist .item .price{
  font-size: 34rpx;
  color: #666666
}
.choselist .item .song{
  color: #4694ff;
  margin-top: 14rpx;
}
.choselist .item .tj{
  position: absolute;
  top: 0;
  right: 0;
}
.choselist .item .tj .tj_bg{
  width: 132rpx;
  height: 42rpx;
}
.choselist .item .tj text{
  width: 108rpx;
  height: 42rpx;
  text-align: center;
  color: #fff;
  position: absolute;
  right: 0;
  top: 0;
  font-size: 26rpx;
}
.btn{
  width: 702rpx;
  height: 90rpx;
  background: linear-gradient(90deg,#3c9aff,#9e95fb);
  margin:140rpx auto 0;
  border-radius: 45rpx;
  color: #fff;
  font-size: 32rpx;
  text-align: center;
  line-height: 90rpx;
}

