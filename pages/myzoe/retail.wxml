<view class="wrapper">
  <view class="bt p-w-24 bg_fff flex_r_b">
    <view class="bt_l flex_r">
      <text>会员升级要求</text>
    </view>
  </view>
  <view class="list p-w-24">
    <view class="item p-w-24" wx:for='{{list}}'  wx:key="index">
      <view class="top flex_r_b">
        <view class="name">{{item.name}}</view>
        <view class="marks">{{item.finish?"已满足条件":"未满足条件"}}</view>
      </view>
      <view class="cu-progress">
        <view class="bg-red" style="{{'width:'+item.speed+'%'}}"></view>
      </view>
      <view class="flex_r_b experience">
        <view>{{item.task_type_title }}</view>
        <view>
          <text class="num">{{item.new_number}}</text>/{{item.number}}
        </view>
      </view>
    </view>
  </view>
</view>