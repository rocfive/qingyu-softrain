/* pages/myzoe/card.wxss */
.tab{
  height: 88rpx;
  color: #4694ff
}
.dated{
  color: #666666
}
.tab .item.active{
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 3rpx solid #4694ff;
}
.list .item{
  width: 702rpx;
  height: 305rpx;
  background: #fff;
  border-radius: 20rpx;
  margin: 42rpx auto;
  box-shadow: 0 2rpx 8rpx rgba(0,90,225,0.26);
  position: relative;
}
.list .item::before,.list .item::after{
  content: "";
  width: 24rpx;
  height: 24rpx;
  border-radius: 12rpx;
  background: #f7f7f7;
  position: absolute;  
}
.list .item::before{
  left: -13rpx;
  top: 202rpx;
}
.list .item::after{
  right: -13rpx;
  top: 202rpx;
}
.list .item .item_t{
  width: 702rpx;
  height: 212rpx;
  background: linear-gradient(90deg, #3d9aff,#8d96fc);
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  padding: 0 32rpx;
  box-sizing: border-box
}
.list .item .item_t .name{
  color: #ffeeee;
  margin-bottom: 10rpx;
}
.list .item .item_t .money{
  color: #ffeeee;
  width: 200rpx;
}
.list .item .item_t .money text{
  font-size: 80rpx;
}
.list .item .item_t .scope{
  height: 70rpx;
  line-height: 70rpx;
  border-left: 1rpx solid #ffd0d0;
  color: #ffffff;
  padding-left: 30rpx;
}
.list .item .item_f{
  width: 702rpx;
  height: 93rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  color: #666666
}
.list .item .item_f .use_btn{
  width: 148rpx;
  height: 54rpx;
  border: 1rpx solid #4694ff;
  text-align: center;
  line-height: 54rpx;
  border-radius: 28rpx;
  font-size: 26rpx;
  color: #419aff
}
.list .item .card_b {
  width: 670rpx;
  height: 18rpx;
  position: absolute;
  bottom: -10rpx;
  left: 16rpx;
  padding: 0 20rpx;
  box-sizing: border-box
}
.list .item .expire{
  position: absolute;
  width: 164rpx;
  height: 56rpx;
  right: 0;
  top: 0;
}
.list .item .expire image{
  width: 164rpx;
  height: 58rpx;
  position: absolute;
  right: -5rpx;
  top: -3rpx;
}
.list .item .expire text{
  text-align: center;
  position: absolute;
  right: 0;
  font-size: 22rpx;
  color: #3d9aff;
  width: 132rpx;
  height: 48rpx;
  line-height: 48rpx;
  display: inline-block;
  box-sizing: border-box;
}
